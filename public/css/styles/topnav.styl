/**
* TOPNAV styling
*/

@import 'variables'

.navbar-default
  -webkit-box-shadow 0 1px 1px rgba(0,0,0,.1)
  box-shadow 0 1px 1px rgba(0,0,0,.1)
  background rgba(255,234,42,.95)
  /*position fixed*/
  /*z-index 150*/
  height 70px
  margin-bottom 0

navbar-default ul li a
  font-family "Helvetica Neue Light", "HelveticaNeue-Light", "Helvetica Neue", Calibri, Helvetica, Arial, sans-serif
  font-weight 400
  height 70px
  line-height 70px
  text-transform uppercase
  padding 0 20px

.navbar-default .navbar-header > a
  color #333
  font-weight bold

.navbar-default .navbar-navicon
  padding-right 0

.navbar-default .navbar-nav li > ahover
  color black

.navbar-default .navbar-nav li > a,
.navbar-default .navbar-nav li.active > a,
.navbar-default .navbar-nav li.active > a:hover,
.navbar-default .navbar-nav li.active > a:focus,
.navbar-default .navbar-nav li.active > a:hover
  color $topnavcolor
  background $topnavbgcolor

.navbar-default ul.navbar-rightlast-child
  margin-right 0

.navbar-nav a .fa
  margin-right 5px

.navbar-top
  -webkit-box-shadow 0 1px 1px rgba(0,0,0,.1)
  box-shadow 0 1px 1px rgba(0,0,0,.1)
  background rgba(255,234,42,.95)
  /*color*/
  /*position fixed*/
  z-index 150
  height 70px
  margin-bottom 0
