/* sidebar style */

.sidebar-nav
  width 250px
  margin 0
  padding 0

.sidebar-nav li
  text-indent 20px
  line-height 40px

.sidebar-nav li a
  display block
  text-decoration none
  color #999

.sidebar-nav li ahover
  text-decoration none
  color #fff
  background rgba(255, 255, 255, 0.2)

.sidebar-nav li a:active,
.sidebar-nav li a:focus
  text-decoration none
  background rgba(235, 235, 235, 0.2)


