/**
* TOPNAV styling
*/

@require 'variables'

.navbar-default
  -webkit-box-shadow 0 1px 1px rgba(0,0,0,.1)
  box-shadow 0 1px 1px rgba(0,0,0,.1)
  background $topnavbgcolor
  height 70px !important
  margin-bottom 0

.navbar-header
  float left
  button
    margin-top 18px
    margin-bottom 18px
    margin 18px 0 18px 10px
    padding 9px

.navbar-nav,
.navbar-nav > li
  float left
  margin 0

.navbar-nav > li > a,
.navbar-brand
  font-size 14px
  line-height 70px
  height 70px
  text-transform uppercase
  padding 0 20px

.navbar-brand
  font-family $font-gotham
  font-weight 700
  font-size 16px
  color $topnavbrandcolor

.navbar-default .navbar-nav li > a:hover,
.navbar-default .navbar-nav li.active > a
.navbar-default .navbar-nav li.active a:focus,
.navbar-default .navbar-nav li.active a:hover
  color $topnavhovercolor
  background $topnavbghovercolor
  cursor pointer

.navbar-default .navbar-nav li.active a:focus
  background $topnavbghovercolor

.navbar-default .navbar-nav a
  color $topnavcolor
  background-color $topnavbgcolor

.navbar-default .navbar-header a
  color $topnavbrandcolor

.navbar-default .nav.navbar-nav.navbar-right
  margin-right 0
  float right !important

.navbar-nav a .fa
  margin-right 5px

.navbar-fixed-top
  border 0

// user info
.navbar-nav
  .img-circle
    border 2px solid $topnavbghovercolor
  .user-info
    overflow hidden
    text-overflow ellipsis
    display inline-block
    white-space nowrap
    line-height 20px
    margin-top 15px
    max-width 100px
    vertical-align top
  .user-info small
    display block

// non collapsible menu fix
@media (max-width: 767px)
  .navbar-nav > li > a
    padding 0 15px
  .navbar-right .dropdown-menu
    right 0 !important
    left auto !important
    position absolute !important
    float left !important
    margin 2px 0 0 !important
    background-color #fff !important
    border 1px solid rgba(0,0,0,.15) !important
    box-shadow 0 6px 12px rgba(0,0,0,.175) !important

@media (max-width: 350px)
  .navbar-nav > li > a
    padding 0 10px

